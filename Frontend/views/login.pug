extends layout

block content
  .w3-card-4
    header.w3-bar.w3-wide.w3-card
      h1 Login
      button#Action.w3-btn.w3-mb-2(type="submit" form="login") CONFIRMAR
      a#Action.w3-btn.w3-mb-2(href="/register") REGISTAR
      
    
    form#login.w3-container(action="/login" method="POST",style="padding-top:90px; padding-bottom:20px")
      fieldset 
        label Email 
        input.w3-input(type="text" name="email")
        label Password 
        input.w3-input(type="password" name="password")